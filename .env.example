# Syndicate Argmax Prediction System - Environment Variables Template
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATA PROVIDER API KEYS
# =============================================================================

# FRED (Federal Reserve Economic Data)
FRED_API_KEY=your_fred_api_key_here

# Alpha Vantage
ALPHAVANTAGE_API_KEY=your_alphavantage_api_key_here

# RapidAPI
RAPIDAPI_KEY=your_rapidapi_key_here

# Binance (optional, for crypto data)
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_API_SECRET=your_binance_secret_here

# CoinGecko (no key required for basic tier)
# Premium tier key if available
COINGECKO_API_KEY=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite for development (default)
DATABASE_TYPE=sqlite
DATABASE_PATH=data/syndicate.db

# PostgreSQL for production (uncomment and configure)
# DATABASE_TYPE=postgresql
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=syndicate
# DATABASE_USER=syndicate_user
# DATABASE_PASSWORD=your_secure_password

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Data Cache TTL (seconds)
CACHE_TTL=300

# API Rate Limiting
MAX_REQUESTS_PER_MINUTE=60

# =============================================================================
# WEB UI CONFIGURATION
# =============================================================================

# Flask Configuration
FLASK_APP=src/web_ui/app.py
FLASK_ENV=development
FLASK_SECRET_KEY=your_secret_key_change_in_production

# Server Configuration
WEB_HOST=0.0.0.0
WEB_PORT=5000

# =============================================================================
# PREDICTION SYSTEM CONFIGURATION
# =============================================================================

# Default Prediction Parameters
DEFAULT_LOOKBACK_WINDOW=100
DEFAULT_CONFIDENCE_THRESHOLD=0.6

# Risk Management
MAX_POSITION_SIZE=0.1
DEFAULT_RISK_FREE_RATE=0.02

# =============================================================================
# MONITORING & ALERTS
# =============================================================================

# Alert Thresholds
PERFORMANCE_DROP_THRESHOLD=0.1
DRIFT_DETECTION_WINDOW=1000

# Health Check Interval (seconds)
HEALTH_CHECK_INTERVAL=60
